<div class='p-3'>
  <div class="text-3xl">Loại sản phẩm</div>

  <div class='flex flex-row items-center justify-between'>
    <div class="mt-4"><div class='font-bold'>Số lượng: <%= @categories.total_count %></div></div>
    <div id='create_inline_form'><%= render 'admin/categories/create_inline_form', category: Category.new %></div>
  </div>

  <table class='w-full mt-4'>
    <thead>
      <tr>
        <th class='text-left bg-gray-900 text-white px-3 py-1'>Tên</th>
        <th class='bg-gray-900 text-white px-3 py-1'>Số lượng sản phẩm</th>
      </tr>
    </thead>
    <tbody id='cat_table'>
      <%= render partial: 'admin/categories/category', collection: @categories %>
    </tbody>
  </table>
  <div class='text-center mt-3'>
    <%= paginate @categories %>
  </div>

</div>
