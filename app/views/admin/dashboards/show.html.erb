<div class="flex-col items-stretch space-y-2">
  <div class='text-xl md:text-3xl font-bold'>
    <%= t('admin.dashboard') %>
  </div>
  <div class='flex flex-col md:flex-row space-y-3 md:space-y-0 md:space-x-4'>
    <div class="p-3 rounded-md border border-gray-100 flex flex-col space-y-1 w-full md:w-1/2">
      <div class='font-bold'><%= t('admin.inmonth_feastday') %></div>
      <div class='flex flex-col space-y-1 divide-y'>
        <% if @months %>
          <% @months.each do |person| %>
            <% next if person.feastday < Time.zone.now %>
            <div class='flex flex-row justify-between items-center'>
              <div class="text-gray-700 flex-auto"><%= person.fullname %></div>
              <div class='text-gray-500 text-sm flex-none'><%= l(person.feastday, format: :weekday_n_date) %></div>
            </div>
          <% end %>
        <% else %>
          <div class='text-gray-500'><%= t('common.empty') %></div>
        <% end %>
      </div>
    </div>
    <div class="p-3 rounded-md border border-gray-100 flex flex-col space-y-1 w-full md:w-1/2">
      <div class='font-bold'><%= t('admin.next_month_feastday') %></div>
      <div class='flex flex-col space-y-1 divide-y'>
        <% if @next_months %>
          <% @next_months.each do |person| %>
            <div class='flex flex-row justify-between items-center'>
              <div class="text-gray-700 flex-auto"><%= person.fullname %></div>
              <div class='text-gray-500 text-sm flex-none'><%= l(person.feastday, format: :weekday_n_date) %></div>
            </div>
          <% end %>
        <% else %>
          <div class='text-gray-500'><%= t('common.empty') %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
