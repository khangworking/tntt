<div class='p-3'>
  <div class="text-3xl">Sự kiện</div>

  <div id='inline_event_form'>
    <%= render 'admin/events/inline_event_form' %>
  </div>

  <table class='w-full mt-4'>
    <thead>
      <tr>
        <th class='text-left bg-gray-900 text-white px-3 py-1'>Tên</th>
        <th class='bg-gray-900 text-white px-3 py-1'>Ngày bắt đầu</th>
        <th class='bg-gray-900 text-white px-3 py-1'></th>
      </tr>
    </thead>
    <tbody id='event-tbody'>
      <%= render 'admin/events/events_tbody', events: @events %>
    </tbody>
  </table>
  <div class='text-center'>
    <%= paginate @events %>
  </div>

</div>
