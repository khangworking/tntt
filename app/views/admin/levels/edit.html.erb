<div class='p-3'>
  <div class="text-3xl">Level Managers</div>
  <%= form_for @level, url: admin_level_path(@level), html: { class: 'flex flex-col space-y-3' } do |f| %>
    <div class='flex flex-col space-x-1'>
      <%= f.label :name %>
      <%= f.text_field :name, disabled: true %>
    </div>
    <%= f.fields_for :managers do |ff| %>
      <%= render 'admin/levels/manager_fields', f: ff %>
    <% end %>
    <div class='link'>
      <%= link_to_add_association 'Add manager', f, :managers %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
