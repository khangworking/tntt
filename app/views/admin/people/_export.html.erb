<div data-controller='modal'>
  <div data-action="click->modal#show" class='inline-flex flex-row align-items-center space-x-1 bg-gray-300 px-2 py-1 rounded-md cursor-pointer'>
    <%= heroicon 'download', options: { class: 'w-7 h-7' } %>
    <div>Export</div>
  </div>
  <div data-modal-target='modalElement' data-action="click->modal#hide" class='hidden top-0 left-0 bg-gray-500 bg-opacity-70 w-screen h-screen grid place-items-center'>
    <div class='bg-white p-3 rounded-md box-border md:w-2/3'>
      <%= form_tag export_admin_people_path do %>
        <%= hidden_field_tag 'level_ids[]', params[:level_ids] %>
        <%= hidden_field_tag :active, params[:active] %>

        <div class='my-2 flex flex-col space-y-2'>
          <%= label_tag :filename %>
          <%= text_field_tag :filename, 'Danh sách thiếu nhi', class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
        </div>

        <div class='my-2'>
          <table class='w-full'>
            <tr>
              <th class='border text-center p-1'>STT</th>
              <th class='border text-left p-1'>Tên Thánh</th>
              <th class='border text-left p-1'>Họ và Tên</th>
              <th class='border p-1'>Ngày sinh</th>
              <th class='border p-1'>Lớp</th>
            </tr>
            <% @people.first(2).each_with_index do |person, index| %>
              <tr>
                <td class='border text-center p-1'><%= index + 1 %></td>
                <td class='border text-left p-1'><%= person.christain_name %></td>
                <td class='border text-left p-1'><%= person.fullname %></td>
                <td class='border p-1 text-center'><%= person.birthday.presence && l(person.birthday.to_date, format: :default) %></td>
                <td class='border p-1 text-center'><%= person.level&.name && t("common.#{person.level.name}") %></td>
              </tr>
            <% end %>
            <tr>
              <td class='border text-center p-1'>...</td>
              <td class='border text-left p-1'>...</td>
              <td class='border text-left p-1'>...</td>
              <td class='border p-1 text-center'>...</td>
              <td class='border p-1 text-center'>...</td>
            </tr>
          </table>
        </div>
        <button>Submit</button>
      <% end %>
    </div>
  </div>
</div>
