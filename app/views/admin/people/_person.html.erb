<div class="flex flex-row justify-between space-x-0 space-y-1 py-2">
  <div class='flex flex-col md:flex-row md:space-x-1 md:items-end'>
    <div class='text-sm text-gray-400'><%= person.christain_name %></div>
    <%= link_to admin_person_path(id: person), class: 'text-md font-bold' do %>
      <%= person.fullname %>
    <% end %>
  </div>
  <div class='text-sm flex-none'>
    <%= link_to t('common.call_phone'), "tel:#{Phonelib.parse(person.phone)}", class: 'text-white bg-red-900 py-2 px-4 rounded-md my-1 md:my-0 inline-block' %>
  </div>
</div>
