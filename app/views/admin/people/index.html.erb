<div class='p-3'>
  <div class="text-3xl">People</div>

  <div class="mt-4">
    <div class='flex flex-row items-center justify-between space-x-2'>
      <div class='flex flex-row items-center space-x-2'>
        <%= render 'admin/people/filter_button' %>
        <%= render 'admin/people/export' %>
      </div>
      <%= link_to new_admin_person_path, class: 'px-2 py-1 rounded-md bg-indigo-400 text-white flex flex-row items-center space-x-2' do %>
        <%= heroicon 'plus', options: { class: 'w-7 h-7' } %>
        <div>Add person</div>
      <% end %>
    </div>
  </div>

  <table class='w-full mt-4'>
    <tr>
      <th class='text-left'>Name</th>
      <th>Gender</th>
      <th>Level</th>
      <th>Created</th>
      <th>Status</th>
    </tr>
    <%= render partial: 'admin/people/person', collection: @people, as: :person %>
  </table>
  <div class='text-center'>
    <%= paginate @people %>
  </div>
  <div class='font-bold'>Count: <%= @people.total_count %></div>
</div>
