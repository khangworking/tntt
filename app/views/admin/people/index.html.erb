<div class='p-3'>
  <div class="text-3xl">People</div>
  <%= form_tag admin_people_path, method: :get, class: 'flex flex-row items-center mt-4' do %>
    <%= select_tag :level_id, options_for_select(Level.all.map { |lv| [t("common.#{lv.name}"), lv.id] }, params[:level_id]), include_blank: 'Select level', class: 'rounded-md bg-gray-200 border-0 focus:ring-0' %>
    <button type='submit' class='p-2 bg-gray-300 rounded-md ml-2 text-gray-700' data-disable-with="Loading">Submit</button>
  <% end %>
  <table class='w-full mt-4'>
    <tr>
      <th class='text-left'>Name</th>
      <th>Gender</th>
      <th>Level</th>
      <th>Created</th>
      <th>Status</th>
    </tr>
    <%= render partial: 'admin/people/person', collection: @people, as: :person %>
  </table>
  <div class='text-center'>
    <%= paginate @people %>
  </div>
</div>
