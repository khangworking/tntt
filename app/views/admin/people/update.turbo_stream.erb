<% if @person.valid? %>
  <%= turbo_stream.update dom_id(@person, 'active_status') do %>
    <%= render 'admin/people/active_toggle', person: @person %>
  <% end %>
  <%= turbo_stream.prepend 'flash' do %>
    <%= render 'layouts/success_flash', success: 'Person updated' %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend 'flash' do %>
    <%= render 'layouts/danger_flash', danger: "Fail to update: #{@person.errors.full_messages.join(', ')}" %>
  <% end %>
<% end %>
