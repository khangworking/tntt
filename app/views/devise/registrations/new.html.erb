<div class='flex flex-col space-y-3 p-4 items-stretch bg-white shadow rounded-md w-full'>
  <div class='text-red-800 font-bold text-xl'><%= t('common.actions.signup') %></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex flex-col space-y-3' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col space-y-1 items-stretch w-full">
      <%= f.label :phone, t('common.phone') %>
      <%= f.text_field :phone, autofocus: true, class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
    </div>

    <div class="flex flex-col space-y-1 items-stretch w-full">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
    </div>

    <div class="flex flex-col space-y-1 items-stretch w-full">
      <%= f.label :password, t('common.password') %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
      <% if @minimum_password_length %>
        <div class='text-sm'><%= t('common.password_min_len', length: @minimum_password_length) %></div>
      <% end %>
    </div>

    <div class="flex flex-col space-y-1 items-stretch w-full">
      <%= f.label :password_confirmation, t('common.password_confirmation') %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
    </div>

    <div class="actions">
      <%= f.submit t('common.actions.signup'), class: 'w-full py-2 rounded-md bg-red-900 text-white' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
