<div class='flex flex-col space-y-3 p-4 items-stretch bg-white shadow rounded-md w-full'>
  <div class='text-red-800 font-bold text-xl'><%= t('common.actions.login') %></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col space-y-3' }) do |f| %>
    <div class="flex flex-col space-y-1 items-stretch w-full">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
    </div>

    <div class="flex flex-col space-y-1 items-stretch w-full">
      <%= f.label :password, t('common.password') %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex flex-row items-center">
        <%= f.check_box :remember_me, class: 'rounded' %>
        <%= f.label :remember_me, t('common.remember_me'), class: 'ml-1' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('common.actions.login'), class: 'w-full py-2 rounded-md bg-red-900 text-white' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
