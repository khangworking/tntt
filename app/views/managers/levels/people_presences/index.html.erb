<div class='flex flex-col space-y-2 items-stretch px-2'>
  <div class='text-right'>
    <% unless l(Time.zone.now.to_date, format: :chain).in?(@resources.keys) %>
      <%= link_to 'Điểm danh', new_managers_level_people_presence_path(level_id: params[:level_id]), class: 'btn bg-green-400 btn-lg' %>
    <% end %>
  </div>
  <% @resources.each do |k,count| %>
    <div class='border border-gray-100 rounded-md p-3'>
      <div class='font-bold'><%= k %></div>
      <div class='font-thin'><%= count %></div>
    </div>
  <% end %>
</div>
