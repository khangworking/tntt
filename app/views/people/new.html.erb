<div class="w-screen h-screen grid place-items-center">
  <div class="w-11/12 lg:w-6/12 rounded-md p-5 border border-gray-200">
    <%= form_for Person.new(level_id: 1), remote: true do |f| %>
      <div class='flex flex-col space-y-4'>
        <div class='flex flex-col space-y-2 items-stretch'>
          <div>
            <%= f.label :christain_name %> <span class="text-red-500">*</span>
          </div>
          <%= f.text_field :christain_name, class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
        </div>
        <div class='flex flex-col space-y-2 items-stretch'>
          <div>
            <%= f.label :fullname %> <span class="text-red-500">*</span>
          </div>
          <%= f.text_field :fullname, class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
        </div>
        <div class='flex flex-row items-center space-x-4'>
          <div class='flex flex-row items-center space-x-2'>
            <%= f.radio_button :gender, 'male' %>
            <%= f.label :gender, t('common.male'), value: 'male' %>
          </div>
          <div class='flex flex-row items-center space-x-2'>
            <%= f.radio_button :gender, 'female' %>
            <%= f.label :gender, t('common.female'), value: 'female' %>
          </div>
        </div>
        <div class='flex flex-col space-y-2 items-stretch'>
          <div>
            <%= f.label :phone %>
          </div>
          <%= f.text_field :phone, class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
        </div>
        <div class='flex flex-col space-y-2 items-stretch'>
          <div>
            <%= f.label :birthday %>
          </div>
          <%= f.date_field :birthday, class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
        </div>
        <div class='flex flex-col space-y-2 items-stretch'>
          <div>
            <%= f.label :feastday %> <span class="text-red-500">*</span>
          </div>
          <%= f.date_field :feastday, class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700' %>
        </div>
        <div class='flex flex-col space-y-2 items-stretch'>
          <div>
            <%= f.label :level_id %> <span class="text-red-500">*</span>
          </div>
          <%= f.select :level_id, Level.all.collect { |l| [t("common.#{l.name}"), l.id] }, {include_blank: false}, {class: 'w-full rounded-md focus:ring-0 border border-gray-300 focus:border-gray-700'} %>
        </div>
        <%= f.button t('common.actions.submit'), class: 'rounded-md py-2 bg-blue-500 flex justify-center items-center space-x-2 text-white cursor-pointer', data: { 'disable_with' => "<div class='animate-spin border-t-2 rounded-full border-gray-100 w-5 h-5'></div><div>Xin ch·ªù!</div>".html_safe } %>
        <button type='reset' class='rounded-md py-2 bg-gray-200'><%= t('common.actions.reset') %></button>
        <div class="w-full py-2 px-4 bg-green-500 success hidden text-white rounded-md">
        </div>
        <div class="w-full py-2 px-4 bg-red-500 error hidden text-white rounded-md">
          Errors
        </div>
      </div>
    <% end %>
  </div>
</div>
