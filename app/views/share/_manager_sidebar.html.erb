<div class='flex flex-col space-y-2'>
  <%= link_to managers_dashboard_path, class: "flex flex-row items-center px-3 py-2 rounded-md space-x-3 duration-200 #{dashboard_controller? ? 'bg-green-500' : 'hover:bg-gray-700'}" do %>
    <%= heroicon "view-grid", variant: dashboard_controller? ? :solid : :outline, options: { class: 'h-7 w-7' } %>
    <div class="<%= dashboard_controller? ? 'font-bold' : '' %>"><%= t('managers.sidebar.dashboard') %></div>
  <% end %>

  <div class='text-gray-600 select-none text-sm'>Resource</div>

  <%= link_to managers_students_path, class: "flex flex-row items-center px-3 py-2 rounded-md space-x-3 duration-200 #{students_controller? ? 'bg-green-500' : 'hover:bg-gray-700'}" do %>
    <%= heroicon "users", variant: students_controller? ? :solid : :outline, options: { class: 'h-7 w-7' } %>
    <div><%= t('managers.sidebar.students') %></div>
  <% end %>
</div>
